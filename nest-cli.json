{
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "plugins": [
            {
                "name": "@nestjs/graphql",
                "options": {
                    "typeFileNameSuffix": [
                        ".dto.ts",
                        ".schema.ts"
                    ],
                    "introspectComments": true
                }
            }
        ]
    }
}
